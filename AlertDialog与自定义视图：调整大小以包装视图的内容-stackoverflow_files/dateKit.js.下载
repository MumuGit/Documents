function getNow(){
	var d = new Date();
	var arr = [];
	arr[0] = d.getFullYear();
	arr[1] = d.getMonth() + 1;
	arr[2] = d.getDate();
	arr[3] = d.getHours();
	arr[4] = d.getMinutes();
	arr[5] = d.getSeconds();
  
	for(var i=1;i<6;i++){
		if(arr[i] < 10){
			arr[i] = "0" + arr[i];
		}
	}
	var s = "";
	s += arr[0] + "-";
	s += arr[1] + "-";
	s += arr[2] + " ";
	s += arr[3] + " : ";
	s += arr[4] + " : ";
	s += arr[5];
	return s;
}
function getNowTime(){
	var s = getNow();
	var pos = s.indexOf(" ");
	var time = s.substring(pos);
	return amorpm() + " " + time;
}
function   amorpm(){
      var   date=new   Date(); 
      return   date.getHours() <12? "AM ": "PM "; 
}
function isTimeGreaterThan(time1,time2){
	 var d1 = new Date(time1);
     var d2 = new Date(time2);
     if(Date.parse(d1) - Date.parse(d2) > 0){
         return true;
     }
     return false;
}